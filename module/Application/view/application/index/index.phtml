        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <h4><?= $this->translate('Last event') ?></h4>
            <pre id="event1">&nbsp;</pre>
            <br>
            <br>
            <button id="get-selected-table1" class="btn btn-default">
                <?= $this->translate('Get selected') ?>
            </button>
            <pre id="selected1">&nbsp;</pre>
        </div>
        <div class="col-md-9">
            <div id="table1"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-offset-3 col-md-9">
            <h3><?= $this->translate('Doctrine ODM Dynamic Table') ?></h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <h4><?= $this->translate('Last event') ?></h4>
            <pre id="event2">&nbsp;</pre>
            <br>
            <br>
            <button id="get-selected-table2" class="btn btn-default">
                <?= $this->translate('Get selected') ?>
            </button>
            <pre id="selected2">&nbsp;</pre>
        </div>
        <div class="col-md-9">
            <div id="table2"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-offset-3 col-md-9">
            <h3><?= $this->translate('PHP Array Dynamic Table') ?></h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <h4><?= $this->translate('Last event') ?></h4>
            <pre id="event3">&nbsp;</pre>
            <br>
            <br>
            <button id="get-selected-table3" class="btn btn-default">
                <?= $this->translate('Get selected') ?>
            </button>
            <pre id="selected3">&nbsp;</pre>
        </div>
        <div class="col-md-9">
            <div id="table3"></div>
        </div>
    </div>
</div>

<script>
    var mapper = function (row) {
        if (row['boolean'] != null) {
            row['boolean'] = '<span class="glyphicon glyphicon-'
                + (row['boolean'] ? 'ok text-success' : 'remove text-danger')
                + '"></span>';
        }
        if (row['datetime'] != null) {
            var m = moment.unix(row['datetime']).local();
            row['datetime'] = m.format('YYYY-MM-DD HH:mm:ss Z');
        }

        return row;
    };

    var strings = {
        DT_BANNER_LOADING: '<?= $this->translate('DT_BANNER_LOADING') ?>',
        DT_BANNER_EMPTY: '<?= $this->translate('DT_BANNER_EMPTY') ?>',
        DT_BANNER_ERROR: '<?= $this->translate('DT_BANNER_ERROR') ?>',
        DT_BUTTON_PAGE_SIZE: '<?= $this->translate('DT_BUTTON_PAGE_SIZE') ?>',
        DT_BUTTON_COLUMNS: '<?= $this->translate('DT_BUTTON_COLUMNS') ?>',
        DT_BUTTON_REFRESH: '<?= $this->translate('DT_BUTTON_REFRESH') ?>',
        DT_BUTTON_OK: '<?= $this->translate('DT_BUTTON_OK') ?>',
        DT_BUTTON_CLEAR: '<?= $this->translate('DT_BUTTON_CLEAR') ?>',
        DT_BUTTON_CANCEL: '<?= $this->translate('DT_BUTTON_CANCEL') ?>',
        DT_TITLE_FILTER_WINDOW: '<?= $this->translate('DT_TITLE_FILTER_WINDOW') ?>',
        DT_LABEL_CURRENT_PAGE: '<?= $this->translate('DT_LABEL_CURRENT_PAGE') ?>',
        DT_LABEL_ALL_PAGES: '<?= $this->translate('DT_LABEL_ALL_PAGES') ?>',
        DT_LABEL_PAGE_OF_1: '<?= $this->translate('DT_LABEL_PAGE_OF_1') ?>',
        DT_LABEL_PAGE_OF_2: '<?= $this->translate('DT_LABEL_PAGE_OF_2') ?>',
        DT_LABEL_FILTER_LIKE: '<?= $this->translate('DT_LABEL_FILTER_LIKE') ?>',
        DT_LABEL_FILTER_EQUAL: '<?= $this->translate('DT_LABEL_FILTER_EQUAL') ?>',
        DT_LABEL_FILTER_BETWEEN_START: '<?= $this->translate('DT_LABEL_FILTER_BETWEEN_START') ?>',
        DT_LABEL_FILTER_BETWEEN_END: '<?= $this->translate('DT_LABEL_FILTER_BETWEEN_END') ?>',
        DT_LABEL_FILTER_NULL: '<?= $this->translate('DT_LABEL_FILTER_NULL') ?>',
        DT_LABEL_TRUE: '<?= $this->translate('DT_LABEL_TRUE') ?>',
        DT_LABEL_FALSE: '<?= $this->translate('DT_LABEL_FALSE') ?>',
        DT_DATE_TIME_FORMAT: '<?= $this->translate('DT_DATE_TIME_FORMAT') ?>',
    };

    var table1 = $('#table1').dynamicTable({
        url: 'index/doctrine-orm-table',
        locale: '<?= substr(\Locale::getDefault(), 0, 2) ?>',
        row_id_column: 'id',
        mapper: mapper,
        strings: strings,
    });

    var table2 = $('#table2').dynamicTable({
        url: 'index/doctrine-odm-table',
        locale: '<?= substr(\Locale::getDefault(), 0, 2) ?>',
        row_id_column: 'id',
        mapper: mapper,
        strings: strings,
    });

    var table3 = $('#table3').dynamicTable({
        url: 'index/array-table',
        locale: '<?= substr(\Locale::getDefault(), 0, 2) ?>',
        row_id_column: 'id',
        mapper: mapper,
        strings: strings,
    });

    $('#get-selected-table1').on('click', function () {
        var selected = table1.getSelected();
        if (selected === 'all')
            $('#selected1').text('<?= $this->translate('All records on all the pages') ?>');
        else if (selected.length)
            $('#selected1').text(selected.join(', '));
        else
            $('#selected1').text('<?= $this->translate('Nothing selected') ?>');
    });

    $('#get-selected-table2').on('click', function () {
        var selected = table2.getSelected();
        if (selected === 'all')
            $('#selected2').text('<?= $this->translate('All records on all the pages') ?>');
        else if (selected.length)
            $('#selected2').text(selected.join(', '));
        else
            $('#selected2').text('<?= $this->translate('Nothing selected') ?>');
    });

    $('#get-selected-table3').on('click', function () {
        var selected = table3.getSelected();
        if (selected === 'all')
            $('#selected3').text('<?= $this->translate('All records on all the pages') ?>');
        else if (selected.length)
            $('#selected3').text(selected.join(', '));
        else
            $('#selected3').text('<?= $this->translate('Nothing selected') ?>');
    });

    $('#table1').on('dt.loading', function (e) {
        $('#event1').text('Loading');
    });
    $('#table1').on('dt.loaded', function (e) {
        $('#event1').text('Loaded');
    });
    $('#table1').on('dt.selected', function (e) {
        $('#event1').text('Selected');
    });
    $('#table1').on('dt.deselected', function (e) {
        $('#event1').text('Deselected');
    });
    $('#table1').on('dt.http-error', function (e, params) {
        $('#event1').text('HTTP Error ' + params.status);
    });

    $('#table2').on('dt.loading', function (e) {
        $('#event2').text('Loading');
    });
    $('#table2').on('dt.loaded', function (e) {
        $('#event2').text('Loaded');
    });
    $('#table2').on('dt.selected', function (e) {
        $('#event2').text('Selected');
    });
    $('#table2').on('dt.deselected', function (e) {
        $('#event2').text('Deselected');
    });
    $('#table2').on('dt.http-error', function (e, params) {
        $('#event2').text('HTTP Error ' + params.status);
    });

    $('#table3').on('dt.loading', function (e) {
        $('#event3').text('Loading');
    });
    $('#table3').on('dt.loaded', function (e) {
        $('#event3').text('Loaded');
    });
    $('#table3').on('dt.selected', function (e) {
        $('#event3').text('Selected');
    });
    $('#table3').on('dt.deselected', function (e) {
        $('#event3').text('Deselected');
    });
    $('#table3').on('dt.http-error', function (e, params) {
        $('#event3').text('HTTP Error ' + params.status);
    });
</script>
