<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3><?= $this->translate('Doctrine-backed Dynamic Table') ?></h3>
            <div id="table1"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h3><?= $this->translate('Array-backed Dynamic Table') ?></h3>
            <div id="table2"></div>
    </div>
</div>

<script>
    var table1 = $('#table1').dynamicTable({
        url: 'index/doctrine-table',
        rowIdColumn: 'id',
        mapper: function (row) {
            if (row['string'] != null) {
                var span = $('<span></span');
                span.text(row['string']);
                row['string'] = span.text();
            }
            if (row['boolean'] != null) {
                row['boolean'] = '<i class="fa fa-'
                    + (row['boolean'] ? 'check' : 'remove')
                    + '"></i>';
            }

            return row;
        },
    });
    var table2 = $('#table2').dynamicTable({
        url: 'index/array-table',
        rowIdColumn: 'id',
        mapper: function (row) {
            if (row['string'] != null) {
                var span = $('<span></span');
                span.text(row['string']);
                row['string'] = span.text();
            }
            if (row['boolean'] != null) {
                row['boolean'] = '<i class="fa fa-'
                    + (row['boolean'] ? 'check' : 'remove')
                    + '"></i>';
            }

            return row;
        },
    });
</script>
